@model PolicyTracker.DomainModel.Policy.Risk

<script type="text/javascript">
    ora.Dialog.OverflowVisible('RiskDecline_dg');
</script>

<form id="DeclineRiskForm" class="oraForm form-horizontal">
    <div class="row">
        @Html.ValidationSummary()
    </div>

    @Html.HiddenFor(m => Model.Id)
    @Html.HiddenFor(m => Model.Prefix)

    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-primary borderless">
                <div class="panel-heading">
                    <i class="fa fa-info fa-lg"></i> Risk Info.
                </div>
                <div class="panel-body gray">
                    @*<div class="form-group">
                        <label class="col-sm-3 control-label">Id:</label>
                        <div class="col-sm-9">
                            <p class="form-control-static">@Model.Id</p>
                        </div>
                    </div>*@

                    <div class="form-group thin">
                        <label class="col-sm-3 control-label">IR #:</label>
                        <div class="col-sm-9">
                            <p class="form-control-static">@Model.ImageRightId</p>
                        </div>
                    </div>

                    <div class="form-group thin">
                        <label class="col-sm-3 control-label">Status:</label>
                        <div class="col-sm-9">
                            @Html.HiddenFor(m => Model.Status, new { value = PolicyTracker.DomainModel.Policy.RiskStatus.DECLINED.Value })
                            <p class="form-control-static">Declined</p>
                        </div>
                    </div>
                    

                    <div class="form-group thin">
                        <label class="col-lg-3 col-sm-3 control-label">Reason:</label>
                        <div class="col-lg-9 col-sm-9">
                            @Html.Partial("ReasonComboBox", Model)
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="panel panel-red">
                <div class="panel-heading btn-danger" style="text-align:center">
                    <i class="fa fa-ban" style="font-size:10em"></i>
                </div>
            </div>
        </div>
    </div>
</form>