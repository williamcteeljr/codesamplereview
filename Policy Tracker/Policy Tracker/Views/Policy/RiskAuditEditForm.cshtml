@model PolicyTracker.DomainModel.Policy.RiskAudit

<form id="RiskAuditForm" class="oraForm form-horizontal">
    <div class="row">
        @Html.ValidationSummary()
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary borderless">
                <div class="panel-body gray">
                    @Html.HiddenFor(m => Model.AuditId)
                    @Html.HiddenFor(m => Model.RiskId)

                    <div class="form-group thin">
                        <label class="col-lg-4 col-sm-4 control-label">Audit Approval:</label>
                        <div class="col-lg-8 col-sm-8">
                            @Html.TextBoxFor(m => Model.AuditDate, new { @class = "form-control datepicker", @Value = WebAppDisplay.GetDateDisplayValue(Model.AuditDate) })
                        </div>
                    </div>

                    <div class="form-group thin">
                        <label class="col-lg-4 col-sm-4 control-label">Amount:</label>
                        <div class="col-lg-8 col-sm-8">
                            @Html.DevExpress().TextBox(settings => {
                            settings.Name = "Amount";
                                settings.ControlStyle.CssClass = "form-control";
                                settings.Properties.MaskSettings.AllowMouseWheel = false;
                                settings.Properties.MaskSettings.Mask = "<-9999999999..9999999999g>";
                                settings.Properties.MaskSettings.IncludeLiterals = MaskIncludeLiteralsMode.DecimalSymbol;
                            }).Bind(Model.Amount.ToString("N0")).GetHtml()
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</form>