@model PolicyTracker.DomainModel.Policy.Product

<form id="ProductEditForm" class="oraForm form-horizontal">
    @Html.ValidationSummary()

    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Product (Policy Prefix)</h3>
        </div>
        <div class="box-body">
            @Html.HiddenFor(m => Model.ProductId)

            @if (Model.ProductId != 0)
            {
                <div class="form-group thin">
                    <label class="col-sm-2 control-label">Prefix:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Prefix</p>
                    </div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label class="col-lg-2 col-sm-3 control-label">Prefix:</label>
                    <div class="col-lg-10 col-sm-9">
                        @Html.TextBoxFor(m => Model.Prefix, new { @class = "form-control upper" })
                    </div>
                </div>
            }

            <div class="form-group">
                <label class="col-lg-2 col-sm-3 control-label">Desc:</label>
                <div class="col-lg-10 col-sm-9">
                    @Html.TextBoxFor(m => Model.Description, new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group">
                <label class="col-lg-2 col-sm-3 control-label">Quote Type:</label>
                <div class="col-lg-10 col-sm-9">
                    @Html.TextBoxFor(m => Model.QuoteType, new { @class = "form-control upper" })
                </div>
            </div>

            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => Model.IsActive)
                    Active (Show in List)
                </label>
            </div>
        </div>
    </div>
</form>