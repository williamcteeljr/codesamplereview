@model PolicyTracker.DomainModel.Policy.StatusReason

<form id="ReasonEditForm" class="oraForm form-horizontal">
    @Html.ValidationSummary()

    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Status Reason</h3>
        </div>
        <div class="box-body">
            @Html.HiddenFor(m => Model.Id)

            <div class="form-group">
                <label class="col-lg-2 col-sm-3 control-label">Status:</label>
                <div class="col-lg-10 col-sm-9">
                    @Html.DropDownListFor(m => Model.Status, new SelectList(ViewBag.Statuses, "Value", "DisplayText"), new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 col-sm-3 control-label">Reason:</label>
                <div class="col-lg-10 col-sm-9">
                    @Html.TextBoxFor(m => Model.Reason, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 col-sm-3 control-label">Reason Desc:</label>
                <div class="col-lg-10 col-sm-9">
                    @Html.TextBoxFor(m => Model.ReasonDesc, new { @class = "form-control" })
                </div>
            </div>

            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => Model.IsActive)
                    Active (Show in List)
                </label>
            </div>
        </div>
    </div>
</form>