@model PolicyTracker.DomainModel.Policy.MonthlyBudget

<form id="MonthlyBudgetEditForm" class="oraForm form-horizontal">
    @Html.ValidationSummary()

    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Monthly Budget</h3>
        </div>
        <div class="box-body">
            @Html.HiddenFor(m => Model.BudgetId)

            <div class="form-group">
                <label class="col-lg-2 col-sm-3 control-label">Product Line:</label>
                <div class="col-lg-10 col-sm-9">
                    @Html.DropDownListFor(m => Model.ProductLine, new SelectList(ViewBag.ProductLines, "Name", "Name"), "", new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group">
                <label class="col-lg-2 col-sm-3 control-label">Branch:</label>
                <div class="col-lg-10 col-sm-9">
                    @Html.DropDownListFor(m => Model.Branch, new SelectList(ViewBag.Branches, "Value", "DisplayText"), "", new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group">
                <label class="col-lg-2 col-sm-3 control-label">Amount:</label>
                <div class="col-lg-10 col-sm-9">
                    @Html.DevExpress().TextBoxFor(model => Model.Amount, settings =>
                       {
                           settings.Name = "Amount";
                           settings.ControlStyle.CssClass = "form-control";
                           settings.Properties.MaskSettings.Mask = "<0..999999999g>";
                           settings.Properties.MaskSettings.IncludeLiterals = MaskIncludeLiteralsMode.DecimalSymbol;
                       }).Bind(Model.Amount.ToString("N0")).GetHtml()
                </div>
            </div>


            <div class="form-group">
                <label class="col-lg-2 col-sm-3 control-label">Month:</label>
                <div class="col-lg-10 col-sm-9">
                    @Html.DropDownListFor(m => Model.DateMonth, new SelectList(ViewBag.Months, "Value", "DisplayText"), new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group">
                <label class="col-lg-2 col-sm-3 control-label">Year:</label>
                <div class="col-lg-10 col-sm-9">
                    @Html.DropDownListFor(m => Model.DateYear, new SelectList(ViewBag.Years), DateTime.Now.Year.ToString(), new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</form>