@model PolicyTracker.DomainModel.Policy.PurposeOfUse

<form id="PurposeOfUseEditForm" class="oraForm form-horizontal">
    @Html.ValidationSummary()

    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Purpose Of Use</h3>
        </div>
        <div class="box-body">
            @Html.HiddenFor(m => Model.Id)

            @if (Model.Id != 0)
            {
                @Html.HiddenFor(m => Model.Code)
                <div class="form-group thin">
                    <label class="col-sm-2 control-label">Effective:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Code</p>
                    </div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label class="col-lg-2 col-sm-3 control-label">Name:</label>
                    <div class="col-lg-10 col-sm-9">
                        @Html.TextBoxFor(m => Model.Code, new { @class = "form-control upper" })
                    </div>
                </div>
            }

            <div class="form-group">
                <label class="col-lg-2 col-sm-3 control-label">Name:</label>
                <div class="col-lg-10 col-sm-9">
                    @Html.TextBoxFor(m => Model.Name, new { @class = "form-control" })
                </div>
            </div>

            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => Model.IsActive)
                    Active (Show in List)
                </label>
            </div>
        </div>
    </div>
</form>