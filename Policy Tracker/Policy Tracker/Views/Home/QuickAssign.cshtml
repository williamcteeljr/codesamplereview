@model PolicyTracker.DTO.UnderwriterQuickAssign

<script type="text/javascript">
    $(document).ready(function () {
        $("#QuickAssignForm").submit(function (event) {
            event.preventDefault();
            ora.Ajax.FormPost(
            {
                url: "/PolicyTracker/Home/QuickAssign",
                container: "QuickAssign_dg",
                grid: "",
                form: "QuickAssignForm",
                data: $("#QuickAssignForm").serializeArray(),
                PreventDefault: true,
                dialog: "QuickAssign_dg",
                successCallback: function () {
                    $("#WLRefresh").click();
                }
            })
        });
    });
</script>

<form id="QuickAssignForm" class="oraForm">
    <div class="row">
        @Html.ValidationSummary()
    </div>

    @Html.HiddenFor(m => Model.Id)

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary borderless">
                <div class="panel-body gray">
                    <div class="form-group">
                        <label>Underwriter:</label>
                        @Html.DropDownListFor(m => Model.UnderwriterId, new SelectList(ViewBag.Underwriters, "UserId", "Name"), "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Underwriter Assistant:</label>
                        @Html.DropDownListFor(m => Model.UnderwriterAssistantId, new SelectList(ViewBag.Assistants, "UserId", "Name"), "", new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>